#Cornell Box
size 480 480
integrator photonmapping
ppl 4000000
photonSample 100
photonSearchRadius 0.04
spp 512
importancesampling brdf
nexteventestimation off
russianroulette on
camera 0 1 3 0 1 0 0 1 0 45
output cornell-photon.png
lightsamples 1
lightstratify off

maxdepth 5


maxverts 4
#planar face
vertex -1 +1 0
vertex -1 -1 0
vertex +1 -1 0
vertex +1 +1 0


ambient 0 0 0
specular 0 0 0
shininess 1000
emission 0 0 0
diffuse 0 0 0

quadLight -0.25 1.999 -0.25 0 0 0.5  0.5 0 0  30 26 21

#point 0 0.44 2 0.8 0.8 0.8

diffuse 0 0 0.8
#sphere 0 0.8 -1.5 0.1


pushTransform

#red
pushTransform
translate -1 1 0
rotate 0 1 0 90
scale 1 1 1
diffuse 0.8 0 0
tri 0 1 2
tri 0 2 3
popTransform

#green
pushTransform
translate 1 1 0
rotate 0 1 0 -90
scale 1 1 1
diffuse 0 0.8 0
tri 0 1 2
tri 0 2 3
popTransform

#back
pushTransform
scale 1 1 1
translate 0 1 -1
diffuse 0.4 0.4 0.8
tri 0 1 2
tri 0 2 3
popTransform

#top
pushTransform
translate 0 2 0
rotate 1 0 0 90
scale 1 1 1
diffuse 0.8 0.8 0.8
tri 0 1 2
tri 0 2 3
popTransform

#bottom
pushTransform
translate 0 0 0
rotate 1 0 0 -90
scale 1 1 1
diffuse 0.8 0.8 0.8
tri 0 1 2
tri 0 2 3
popTransform

pushTransform
translate -0.6 0.12 0.1
scale 0.2 0.2 0.2
diffuse 0.0 0.0 0.0
specular 0.9999 0.9999 0.9999
roughness 0.05
ior 0.66
brdf ggx-refraction

obj Scenes/final/bunny.obj

popTransform

pushTransform
translate 0.15 0.25 -0.4
scale 0.25 0.25 0.25
diffuse 0.0 0.0 0.0
specular 0.99 0.99 0.99
roughness 0.05
ior 0.001
brdf ggx

obj Scenes/final/teapot.obj

popTransform

pushTransform
brdf ggx-refraction
translate 0.6 1.2 0.3
scale 0.3 0.3 0.3
roughness 0.001
ior 0.95
sphere 0 0 0 1

popTransform


popTransform

popTransform
